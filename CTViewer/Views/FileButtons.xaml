<UserControl x:Class="CTViewer.Views.FileButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CTViewer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Column="0" Background="#EEE" Margin="5">
            <!-- Add your buttons here -->
            <Button Content="🚪 Exit" Margin="5" Click="ExitButton_Click"/>
            <Button Content="📂 Open" Margin="5" Click="OpenButton_Click"/>
            <Button Content="💾 Save As" Margin="5" Click="SaveAs_Click" x:Name="SaveAsButton"/>
            <Button Content="📤 Export" Margin="5"/>
            <ToggleButton x:Name="TwoPlayerMode" Content="🖼️🖼️ Side by Side Mode" Checked="TwoPlayerMode_Checked" Unchecked="TwoPlayerMode_Unchecked" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
