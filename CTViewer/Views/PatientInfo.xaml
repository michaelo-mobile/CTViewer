<UserControl x:Class="CTViewer.Views.PatientInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CTViewer.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="#AA000000"
            Padding="10"
            CornerRadius="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10">

        <!-- Add content or attributes here as needed -->

        <StackPanel>
            <TextBlock x:Name="PatientNameText" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="PatientIDText" Foreground="White"/>
            <TextBlock x:Name="ClinicNameText" Foreground="White"/>
            <TextBlock x:Name="PhysicianNameText" Foreground="White"/>
            <TextBlock x:Name="DateTimeText" Foreground="White"/>
            <TextBlock x:Name="ModalityText" Foreground="White"/>
            <TextBlock x:Name="ImageIndexText" Foreground="White"/>
            <TextBlock x:Name="BodyAreaText" Foreground="White"/>
        </StackPanel>
    </Border>
</UserControl>