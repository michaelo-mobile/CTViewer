<Window x:Class="CTViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTViewer"
		xmlns:views="clr-namespace:CTViewer.Views"
        mc:Ignorable="d"
        Title ="CT Viewer App" Height="800" Width="1000" WindowStyle="None" AllowsTransparency="False" ResizeMode="CanResize" 
        >
    

    <Grid>
        <!-- Define main layout rows: Title | Main area | Bottom bar -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Main area -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom bar -->
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black"></Grid>
        <!-- Title Row -->
        <TextBlock Grid.Row="0" Text="CT Viewer App"
               FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="10"
               Background="Gold"/>
        <Grid Grid.Row="2" Background="Black"></Grid>
        <TextBlock Grid.Row="2" Text="Github: Michaelo-mobile, LLC"
                FontSize="20" FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="10"
                Background="Gold"></TextBlock>
    
        <!-- Main 3-Column Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <!-- File Buttons -->
                <ColumnDefinition Width="*"/>
                <!-- Image Area -->
                <ColumnDefinition Width="180"/>
                <!-- Image Modifications -->
            </Grid.ColumnDefinitions>

            <views:FileButtons x:Name="FileButtons" Grid.Column="0"/>
            <views:DrawingButtons x:Name="DrawingCanvas" Grid.Column="2"/> 

            <!-- Center Panel: Image & Anchors -->
            <Grid Grid.Column="1">
                <!-- Image -->
                <Image x:Name="MainImage"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
