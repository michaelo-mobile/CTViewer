<Window x:Class="CTViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTViewer"
		xmlns:views="clr-namespace:CTViewer.Views"
        mc:Ignorable="d"
        Title ="CT Viewer App" Height="800" Width="1000" WindowStyle="None" AllowsTransparency="False" ResizeMode="CanResize" 
        >
    

    <Grid>
        <!-- Define main layout rows: Title | Main area | Bottom bar -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Main area -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom bar -->
        </Grid.RowDefinitions>

        <!-- Title Row -->
        <Grid Grid.Row="0" Background="Black">
            <TextBlock Text="CT Viewer App"
                       FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="10"
                       Background="Gold"/>
        </Grid>

        <!-- Bottom Bar -->
        <Grid Grid.Row="2" Background="Black">
            <TextBlock Text="Github: Michaelo-mobile, LLC"
                       FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="10"
                       Background="Gold"/>
            <TextBlock Text="LeftImageFile" x:Name="LeftImageFile" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Margin="122,10,0,10" Background="Gold" />
            <TextBlock Text="RightImageFile" x:Name="RightImageFile" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold" Margin="0,10,122,10" Background="Gold"/>
        </Grid>

        <!-- Main 3-Column Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <!-- File Buttons -->
                <ColumnDefinition Width="*"/>
                <!-- Image Area -->
                <ColumnDefinition Width="180"/>
                <!-- Image Modifications -->
            </Grid.ColumnDefinitions>

            <views:FileButtons x:Name="FileButtons" SaveAsClicked="SaveAsClickedEvent" Grid.Column="0"/>

            <StackPanel Grid.Column="2" Background="#EEE" Margin="5" Orientation="Vertical">
                <!-- Drawing buttons panel -->
                <views:DrawingButtons x:Name="DrawingCanvas"/>

                <!-- New Hide Patient Info button -->
                <Button x:Name="HidePatientInfoButton"
                        Content="🔒 Hide Patient Info"
                        Margin="5"
                        Click="HidePatientInfoButton_Click"/>
                <Button x:Name="RestWW_WL"
                        Content="🔄 Reset WW and WL"
                        Margin="5"
                        Click="BtnResetAuto_Click"/>
                <!-- could potentially add another reset button exclusively for WW and WL separately -->
                <TextBlock Text="WW(Contrast):" Margin="5,10,0,2"/>
                <Slider x:Name="WWSlider"
                        Margin="5"
                        Minimum="0" Maximum="4096"
                        Value="1000"
                        TickFrequency="100"
                        IsSnapToTickEnabled="True"
                        ValueChanged="WWSlider_ValueChanged"/>
                <TextBlock Text="WL(Brightness):" Margin="5,10,0,2"/>
                <Slider x:Name="WLSlider"
                        Margin="5"
                        Minimum="0" Maximum="4096"
                        Value="1000"
                        TickFrequency="100"
                        IsSnapToTickEnabled="True"
                        ValueChanged="WLSlider_ValueChanged"/>
                <!-- Presets dropdown -->
                <TextBlock Text="Presets:" Margin="5,10,0,2"/>
                <ComboBox x:Name="PresetComboBox"
                          Margin="5"      
                          SelectionChanged="PresetComboBox_SelectionChanged">
                    <ComboBoxItem Content="🎛️ Default" Tag="default" IsSelected="True"/>
                    <ComboBoxItem Content="🦴 Bone" Tag="bone"/>
                    <ComboBoxItem Content="💪 Soft Tissue" Tag="soft"/>
                    <ComboBoxItem Content="🫁 Lung" Tag="lung"/>
                    <ComboBoxItem Content="🧠 Brain" Tag="brain"/>
                </ComboBox>
                <TextBlock Text="Welcome to CTViewer! Press Open to load your medical images (DICOM). Use Draw to mark findings and WL/WW to tune contrast." Margin="5,10,0,2" TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Host grid for BOTH panes (inside your outer app layout) -->
            <Grid x:Name="ImagesLayout" Grid.Column="1" ClipToBounds="True">
                <!-- Two inner columns: left viewer + right viewer -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="ViewerLeftCol" Width="*"/>
                    <ColumnDefinition x:Name="ViewerRightCol" Width="0"/>
                    <!-- collapsed by default -->
                </Grid.ColumnDefinitions>

                <!-- ========== LEFT PANE (scaled as one unit) ========== -->
                <Viewbox x:Name="LeftViewbox" Grid.Column="0" Stretch="Uniform">
                    <!-- Fixed-size surface; set Width/Height in code-behind to image pixel size -->
                    <Grid x:Name="LeftSurface" ClipToBounds="True">
                        <Image x:Name="MainImage"
                               Stretch="Fill"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               
                               Panel.ZIndex="0"/>
                        <InkCanvas x:Name="InkCanvas"
                                   Background="Transparent"
                                   EditingMode="None"
                                   Panel.ZIndex="1"/>
                        <Border x:Name="LeftActiveHighlight"
                                Panel.ZIndex="99"
                                BorderBrush="#66FFD54F" BorderThickness="10"
                                CornerRadius="1" Visibility="Collapsed"
                                IsHitTestVisible="False"/>  
                        <Grid x:Name="PatientInfoOverlay"
                              IsHitTestVisible="False"
                              Panel.ZIndex="2">
                            <Border CornerRadius="6" Background="#AA000000" Padding="6"
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                <TextBlock x:Name="PatientInfoTop" Foreground="White" TextWrapping="Wrap"
                                           Text="Patient: —&#10;ID: —&#10;Clinic: —&#10;Physician: —"/>
                            </Border>
                            <Border CornerRadius="6" Background="#AA000000" Padding="6"
                                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
                                <TextBlock x:Name="PatientInfoBottom" Foreground="White" TextWrapping="Wrap"
                                           Text="Date/Time: —&#10;Modality/Study: —&#10;Image Index: —&#10;Body Area/Laterality: —"/>
                            </Border>
                            <Border x:Name="XYHUOverlay" Background="#AA000000" CornerRadius="6" Padding="4,2"
                                    Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Visible">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock x:Name="XYHU" Foreground="White" FontSize="12" Text="X: —   Y: —    HU: —"/>
                                    <TextBlock x:Name="WlWwText" Foreground="White" FontSize="12" Text="WL: —   WW: —"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Viewbox>

                
                <!-- ========== RIGHT PANE (scaled as one unit) ========== -->
                <Viewbox x:Name="RightViewbox" Grid.Column="1" Stretch="Uniform" Visibility="Collapsed">
                    <Grid x:Name="RightSurface" ClipToBounds="True">
                        <Image x:Name="RightImage"
                               Stretch="Fill"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               
                               Panel.ZIndex="0"/>
                        <InkCanvas x:Name="RightInkCanvas"
                                   Background="Transparent"
                                   EditingMode="None"
                                   Panel.ZIndex="1"/>
                        <Border x:Name="RightActiveHighlight"
                                    Panel.ZIndex="99"
                                    BorderBrush="#66FFD54F" BorderThickness="10"
                                    CornerRadius="1" Visibility="Collapsed"
                                    IsHitTestVisible="False"/>
                        <Grid x:Name="RightPatientInfoOverlay"
                              IsHitTestVisible="False"
                              Panel.ZIndex="2">
                            <Border CornerRadius="6" Background="#AA000000" Padding="6"
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                <TextBlock x:Name="RightPatientInfoTop" Foreground="White" TextWrapping="Wrap"
                                           Text="Patient: —&#10;ID: —&#10;Clinic: —&#10;Physician: —"/>
                            </Border>
                            <Border CornerRadius="6" Background="#AA000000" Padding="6"
                                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
                                <TextBlock x:Name="RightPatientInfoBottom" Foreground="White" TextWrapping="Wrap"
                                           Text="Date/Time: —&#10;Modality/Study: —&#10;Image Index: —&#10;Body Area/Laterality: —"/>
                            </Border>
                            <Border x:Name="RightXYHUOverlay" Background="#AA000000" CornerRadius="6" Padding="4,2"
                                    Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Visible">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock x:Name="RightXYHU" Foreground="White" FontSize="12" Text="X: —   Y: —    HU: —"/>
                                    <TextBlock x:Name="RightWlWwText" Foreground="White" FontSize="12" Text="WL: —   WW: —"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</Window>
