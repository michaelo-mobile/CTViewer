<Window x:Class="CTViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTViewer"
		xmlns:views="clr-namespace:CTViewer.Views"
        mc:Ignorable="d"
        Title ="CT Viewer App" Height="800" Width="1000" WindowStyle="None" AllowsTransparency="False" ResizeMode="CanResize" 
        >
    

    <Grid>
        <!-- Define main layout rows: Title | Main area | Bottom bar -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Main area -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom bar -->
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black"></Grid>
        <!-- Title Row -->
        <TextBlock Grid.Row="0" Text="CT Viewer App"
               FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="10"
               Background="Gold"/>
        <Grid Grid.Row="2" Background="Black"></Grid>
        <TextBlock Grid.Row="2" Text="Github: Michaelo-mobile, LLC"
                FontSize="20" FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="10"
                Background="Gold"></TextBlock>
    
        <!-- Main 3-Column Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <!-- File Buttons -->
                <ColumnDefinition Width="*"/>
                <!-- Image Area -->
                <ColumnDefinition Width="180"/>
                <!-- Image Modifications -->
            </Grid.ColumnDefinitions>

            <views:FileButtons x:Name="FileButtons" Grid.Column="0"/>
            
            <StackPanel Grid.Column="2" Background="#EEE" Margin="5"
            Orientation="Vertical">

                <!-- Drawing buttons panel -->
                <views:DrawingButtons x:Name="DrawingCanvas"/>

                <!-- New Hide Patient Info button -->
                <Button x:Name="HidePatientInfoButton"
                Content="Hide Patient Info"
                Margin="5"
                Click="HidePatientInfoButton_Click"/>
                <Button x:Name="RestWW_WL"
                Content="Reset WW and WL"
                Margin="5"
                Click="BtnResetAuto_Click"/>
                <!--could potentialaly add another reset button exclusively for WW and WL seperately-->
                <TextBlock Text="WW:" Margin="0,10,0,2"/>
                <Slider x:Name="WWSlider"
                Margin="5"
                Minimum="0" Maximum="4096"
                Value="1000"
                TickFrequency="100"
                IsSnapToTickEnabled="True"
                ValueChanged="WWSlider_ValueChanged" />
                <TextBlock Text="WL:" Margin="0,10,0,2"/>
                <Slider x:Name="WLSlider"
                Margin="5"
                Minimum="0" Maximum="4096"
                Value="1000"
                TickFrequency="100"
                IsSnapToTickEnabled="True"
                ValueChanged="WLSlider_ValueChanged" />
                <!-- Presets dropdown -->
                <ComboBox x:Name="PresetComboBox"
                Margin="5"
                Width="200"
                SelectionChanged="PresetComboBox_SelectionChanged">
                    <ComboBoxItem Content="Default" Tag="default" IsSelected="True" />
                    <ComboBoxItem Content="Bone" Tag="bone" />
                    <ComboBoxItem Content="Soft Tissue" Tag="soft" />
                    <ComboBoxItem Content="Lung" Tag="lung" />
                    <ComboBoxItem Content="Brain" Tag="brain" />
                </ComboBox>
            </StackPanel>

            <!-- Center Panel: Image + Overlays -->
            <Grid Grid.Column="1">
                <!-- Base image -->
                <Image x:Name="MainImage"
           Stretch="Uniform"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>

                <!-- Overlay layer (on top of the image) -->
                <Grid x:Name="PatientInfoOverlay"
          Panel.ZIndex="1000"
          IsHitTestVisible="False">
                    <!-- let mouse events hit the image -->

                    <!-- Top-right patient info -->
                    <Border CornerRadius="6"
                Background="#AA000000"
                Padding="6"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10">
                        <TextBlock x:Name="PatientInfoTop"
                       Foreground="White"
                       TextWrapping="Wrap"
                       Text="Patient: —&#10;ID: —&#10;Clinic: —&#10;Physician: —"/>
                    </Border>

                    <!-- Bottom-right patient info -->
                    <Border CornerRadius="6"
                Background="#AA000000"
                Padding="6"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10">
                        <TextBlock x:Name="PatientInfoBottom"
                       Foreground="White"
                       TextWrapping="Wrap"
                       Text="Date/Time: —&#10;Modality/Study: —&#10;Image Index: —&#10;Body Area/Laterality: —"/>
                    </Border>

                    <!-- Bottom-left: WL/WW status (always visible) -->
                    <Border x:Name="XYHUOverlay"
                Background="#AA000000"
                CornerRadius="6"
                Padding="4,2"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="Visible"
                Panel.ZIndex="1001"
                IsHitTestVisible="False">
                        <!-- don't block mouse -->
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="XYHU"
                   Foreground="White"
                   FontSize="12"
                   Text="X: —   Y: —    HU: —"/>
                            <TextBlock x:Name="WlWwText"
                   Foreground="White"
                   FontSize="12"
                   Text="WL: —   WW: —"/>
                        </StackPanel>
                    </Border>

                </Grid>
            </Grid>
        </Grid>
     </Grid>
</Window>
