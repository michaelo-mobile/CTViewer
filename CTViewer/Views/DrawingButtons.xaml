<UserControl x:Class="CTViewer.Views.DrawingButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="200">
    <StackPanel Margin="5" Background="#EEE">
        <Button x:Name="DrawingToggleButton" Content="🖌️ Draw" Margin="0,5,0,0" />
        <TextBlock Text="Stroke Size 🖊️📏" Margin="0,10,0,2"/>
        <Slider x:Name="StrokeSizeSlider" Minimum="1" Maximum="10" Value="2" TickFrequency="1" IsSnapToTickEnabled="True" />

        <TextBlock Text="Stroke Color 🎨" Margin="0,10,0,2"/>
        <ComboBox x:Name="StrokeColorComboBox" SelectedIndex="0">
            <ComboBoxItem>Black</ComboBoxItem>
            <ComboBoxItem>Red</ComboBoxItem>
            <ComboBoxItem>Blue</ComboBoxItem>
            <ComboBoxItem>Green</ComboBoxItem>
            <ComboBoxItem>Yellow</ComboBoxItem>
        </ComboBox>
        <Button x:Name="UndoButton" Content="↩️ Undo" Margin="0,10,0,0" />
        <Button x:Name="ClearButton" Content="🗑️ Clear All" Margin="0,5,0,0" />
        <Button x:Name="HideButton" Content=" 🙈 Hide Annotations" Margin="0,5,0,0" />
    </StackPanel>
</UserControl>
